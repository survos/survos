{% block value %}
    {% if value|fn_is_object %}
        {{ value|json_encode }}
    {% elseif value|fn_is_array %}
        {% if value|fn_array_is_list %}
            <ol>
                {% for v in value %}
                    <li>
                        {% with {value: v, row:value} only %}
                            {{ block('value') }}
                        {% endwith %}
                    </li>
                {% endfor %}
            </ol>
        {% else %}
            <ul>
            {% for key,v in value %}
                <li>{{ key }}:
                    {% with {value: v, row:value} only %}
                        {{ block('value') }}
                    {% endwith %}
                </li>
            {% endfor %}
            </ul>
        {% endif %}
    {% else %}
        {{ value }}
    {% endif %}
{% endblock %}

