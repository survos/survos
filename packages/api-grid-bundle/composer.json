{
    "name": "survos/api-grid-bundle",
    "description": "incorporate DatatablesNet, using twig and stimulus, twig_component requires ^2.2",
    "keywords": [
        "symfony-ux",
        "symfony6"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Tac Tacelosky",
            "email": "tacman@gmail.com"
        }
    ],
    "type": "symfony-bundle",
    "require": {
        "php": "^8.3",
        "doctrine/doctrine-bundle": "^2.15",
        "doctrine/orm": "^3.5",
        "doctrine/persistence": "^3.4 || ^4.0",
        "survos/inspection-bundle": "^1.5.601",
        "symfony/config": "^6.4 || ^7.3",
        "symfony/dependency-injection": "^6.4 || ^7.3.1",
        "symfony/http-kernel": "^6.4 || ^7.3.1",
        "symfony/options-resolver": "^6.4 || ^7.3",
        "symfony/ux-twig-component": "^2.27",
        "twig/twig": "^3.21.1",
        "symfony/dom-crawler": "^6.4 || ^7.3.1"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "phpstan/phpstan": "^2.1.19",
        "api-platform/symfony": "^3.2||^4.1.19",
        "symfony/browser-kit": "^6.4 || ^7.3",
        "symfony/framework-bundle": "^6.4 || ^7.3.1",
        "symfony/phpunit-bridge": "^6.4 || ^7.3.1",
        "symfony/twig-bundle": "^6.4 || ^7.3.1",
        "symfony/var-dumper": "^6.4 || ^7.3.1",
        "symfony/ux-chartjs": "^2.27",
        "meilisearch/meilisearch-php": "^1.15",
        "symfony/http-client": "^6.4 || ^7.3.1",
        "nyholm/psr7": "^1.8.2",
        "symfony/intl": "^6.4 || ^7.3.1",
        "symfony/stopwatch": "^6.4 || ^7.3",
        "rector/rector": "^2.1.2",
        "api-platform/doctrine-orm": "^4.1.19",
        "zenstruck/class-metadata": "^1.1",
        "symfony/yaml": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "Survos\\ApiGridBundle\\": "src/",
            "Survos\\ApiGrid\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.6-dev"
        },
        "symfony": {
            "require": "^6.4 || ^7.1"
        }
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyse"
    },
    "suggest": {
        "monolog/monolog": "Allows more advanced logging of the application flow",
        "api-platform/symfony": "For javascript-based grid rendering",
        "api-platform/doctrine-common": "doctrine integration",
        "friendsofsymfony/jsrouting-bundle": "use path() in javascript grid rendering"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "zenstruck/class-metadata": true
        }
    },
    "prefer-stable": true
}
