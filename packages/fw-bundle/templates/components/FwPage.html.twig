<div{{ attributes }}>
    <div class="page" data-name="{{ name }}">
        <div class="navbar">
            <div class="navbar-bg"></div>
            <div class="navbar-inner sliding">
                <div class="left">
                    <a href="#" class="link back">
                        <i class="icon icon-back"></i>
                        <span class="if-not-md">Back</span>
                    </a>
                </div>

                <div class="title" {{ stimulus_target(_app_sc, 'pageTitle') }}>
                    {{ _app_sc }}
                    {{ title }}
                </div>

                <div class="right">
                    <a href="#" class="link icon-only panel-open" data-panel="right">
                        <twig:ux:icon name="icon-park-outline:more-three" />
                    </a>
                </div>

            </div>
        </div>
        <div class="page-content">
            <div class="block-title" {{ stimulus_target(_app_sc, 'pageTitle') }}>{{ title | trans}}</div>
            <div class="block">

                <p>
                    {% block content %}
                    content in {{ _self }}
                    {% endblock %}
                </p>
            </div>
        </div>
    </div>
</div>
