{% extends 'base.html.twig' %}

{% block title %}Hello MomaController!{% endblock %}

{% block body %}
    <div class="example-wrapper">

        <h1>{{ kv.filename }}</h1>

        {#    {{ dump(charts) }} #}
        {% for tableName, indexes in charts %}


            <h2>{{ tableName }}</h2>
            {{ dump(firstRecords[tableName]) }}
            {% for indexName, chart in indexes %}
                <div class="row">
                    <div class="col-md-3">
                        <h3>{{ indexName }}</h3>
                        <div class="my-chart">
                            {{ render_chart(chart) }}
                        </div>
                    </div>
                    <div class="col-md-6">


                        {% set columns = [
                            {name: 'count', title: '#'},
                            {name: 'value', title: indexName}
                        ] %}
                        <twig:simple_datatables
                                :caller="_self"
                                :columns="columns"
                                :data="kv.getCounts(indexName, tableName, 100)"
                        >
                            <twig:block name="value">
                                <a href="#">{{ row.value }}</a>
                            </twig:block>

                        </twig:simple_datatables>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}


        {#    {% endfor %} #}

    </div>
{% endblock %}

