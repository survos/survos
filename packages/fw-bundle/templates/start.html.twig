                        {% for t in config.tabs %}
                        <a href="#tab-{{ t }}" title="#tab-{{ t }}" class="tab-link ">
                            <twig:ux:icon name="{{iconMap[t]|default('tabler:bug')}}" />
                            {% if app.request.get('debug', false) %}<code>{{ t }}</code>{% endif %}
