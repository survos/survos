{% block value %}
    {% if value|is_object %}
        {{ value|json_encode }}
    {% elseif value|is_array %}
        {% if value|array_is_list %}
            <ol>
                {% for v in value %}
                    <li>
                        {% with {value: v, row:value} only %}
                            {{ block('value') }}
                        {% endwith %}
                    </li>
                {% endfor %}
            </ol>
        {% else %}
            <ul>
                {% for key,v in value %}
                    <li>{{ key }}:
                        {% with {value: v, row:value} only %}
                            {{ block('value') }}
                        {% endwith %}
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    {% else %}
        {{ value|urlize }}
    {% endif %}
{% endblock %}

