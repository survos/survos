{% extends 'base.html.twig' %}

{% set pixieCode = pixieCode|default(false) %}
{% block title %}Pixie {{  pixieCode }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/survospixie/style.css') }}" ></link>
{% endblock %}

{% block page_header %}
                {{ component('menu', {
                    caller: _self,
                    type: PAGE_MENU,
                    options: {
                        pixieCode: pixieCode
                    }
                }) }}

{#    at a minimum: https://getbootstrap.com/docs/5.0/components/navbar/#}

    <div class="card mt-3 mb-0">
        <div class="card-body d-flex gap-3 align-items-center">
            {% set currentTablename = tableName|default(false) %}

            {# NAVIGATION: #}
            <h6 class="mb-0">Pixie List</h6>
             <a class="text-decoration-none" href="{{ path('pixie_browse_configs') }}">{{ 'all'|trans }}</a>
            /
            {% if pixieCode|default(false) %}
                <a class="text-decoration-none" href="{{ path('pixie_overview', {pixieCode: pixieCode}) }}">
                    Pixie {{ pixieCode }}
                </a>

                |
                {# @todo: make this a dropdown? #}
                {% if kv|default(false) %}
                    {% for table in kv.tableNames %}
                        {# @rk: this is just to show how which is the active table #}
                        <a class="text-decoration-none text-capitalize {{ table == currentTablename ? 'text-primary' : 'text-dark' }}" href="{{ path('pixie_browse', {tableName: table, pixieCode: pixieCode}) }}">
                            {{ table }}
                        </a>
                    {% endfor %}
                {% endif %}
            {% endif %}

            {# redundant, as this is also above.   #}
            {% if currentTablename %}
                <h6 class="flex-shrink-0 mb-0 ms-auto">
                    <a class="link link-dark text-capitalize text-decoration-none" href="{{ path('pixie_table', {pixieCode: pixieCode, tableName: tableName}) }}">
                        <twig:ux:icon name="material-symbols:refresh" width="18" height="18" class="align-middle" />
                        {{ tableName }}
                    </a>
                </h6>
            {% endif %}
        </div>
    </div>


{% endblock %}


{% block body %}


{% endblock %}
