{# templates/components/api_tree.html.twig #}
<h3>{{ this.stimulusController }} {{ apiUrl|default('~') }} </h3>
<div
        {{ stimulus_controller(this.stimulusController, {
            api_call:  apiUrl|default(api_route(this.class)),
            filter: this.filter
        }) }}
>
    <div {{ stimulus_target(this.stimulusController, 'message') }}>Messages go here.</div>

    <h3>Html</h3>
    <ol {{ stimulus_target(this.stimulusController, 'html') }}>
        <li>
            Html tree here?

        </li>
    </ol>

    <h3>Ajax</h3>
    <ol {{ stimulus_target(this.stimulusController, 'ajax') }}>
        Ajax tree will be populated here.
    </ol>
</div>

