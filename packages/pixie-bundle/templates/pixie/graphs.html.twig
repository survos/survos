{% extends 'base.html.twig' %}

{% block title %}Pixie!{% endblock %}

{% block body %}
    <div class="example-wrapper">

        <h1>{{ filename }}</h1>


        {% for tableName, tableData in tables %}
        {% set item = tableData.first %}
            {% if item %}
                <a href="{{ path('pixie_show_record', item.rp) }}">
                    Open first {{ tableName}} [{{ item}}] and transitions
                </a>
                <details>
                    <summary>
                        {{ tableName }}
                        {{ item }}
                        Raw Data
                    </summary>
                    <twig:simple_item_grid
                            exclude="_raw,_att,_extra"
                            :data="item.data"
                    >
                    </twig:simple_item_grid>


{#            {% if item._att %}#}
{#                <h3>Attributes</h3>#}
{#        <twig:simple_item_grid#}
{#                :data="row._raw|json_decode(true)"#}
{#        />#}
{#            {% endif %}#}
            {% endif %}
            </details>

{#            <twig:item_grid#}
{#                    :data="tableData.first:#}
{#                    >#}
{#            </twig:item>>#}


            <h2>
                <a href="{{ path('pixie_browse', {'pixieCode': pixieCode, tableName: tableName}) }}">
                {{ tableName }} (n={{ tableData.count }})
                </a>
            </h2>
            {% for indexName, chart in tableData.charts %}

                <div class="row" id="{{ indexName }}">
                    <div class="col-md-3">
                        <h3>{{ indexName }}</h3>

                        <div class="my-chart">
                            {{ render_chart(chart.chart) }}
                        </div>
                    </div>
                    <div class="col-md-6">

                        {% set columns = [
                            {name: 'count', title: '#'},
                            {name: 'value', title: indexName}
                        ] %}
                        <twig:simple_datatables
                                perPage="10"
                                :caller="_self"
                                :columns="columns"
                                :data="chart.counts"
                        >
                            <twig:block name="count">
                                <a href="{{ path('pixie_browse', {index: indexName, value: row.value, 'pixieCode': pixieCode, tableName: tableName}) }}">
                                    {# this is the row from chart.counts #}
                                    {{ row.count }}
                                </a>
                            </twig:block>

                        </twig:simple_datatables>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}


        {#    {% endfor %} #}

    </div>
{% endblock %}

{% block debug %}
Using KV, no doctrine!
{% for table in kv.tables %}
    <h3>
        {{ table }}
    </h3>
    {% for index in kv.indexes(table) %}
        <b>{{ index }}</b>
        {{ kv.getCounts(index, table)|map(c => "#{c.value} #{c.count}")|join("<br />")|raw }}
    {% endfor %}

    {% for row in kv.iterate(table) %}
        {% if loop.index < 3 %}
            <twig:simple_item_grid
                    exclude="_raw,_att,_extra"
                    :data="item.data"
            >
            </twig:simple_item_grid>
        {% endif %}
    {% endfor %}
{% endfor %}
{% endblock %}
