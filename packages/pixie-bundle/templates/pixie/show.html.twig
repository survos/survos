    {{ include(["pixie/%s/%s.html.twig"|format(pixieCode, tableName),  "pixie/%s.html.twig"|format(pixieCode)], {
        item: row,
        data: row.data,
        kv: kv|default(null)
    }, ignore_missing=true)  }}

