{# templates/components/datatable.html.twig #}
{% set columns = this.normalizedColumns %}
<div
        {{ this.stimulusController ? stimulus_controller(this.stimulusController, {
    search: this.search,
    info: this.info,
}) }}>
<table class="table">
{#<table class="table" {{ this.stimulusController ? stimulus_target(this.stimulusController, 'table') }}>#}
    <thead>
    <tr>
        {% for c in columns %}
            <th>
                {{ c.title }}
            </th>
        {% endfor %}
    </tr>
    </thead>
    <tbody>
    {% for row in data %}
        <tr class="align-top">
            {% for c in columns %}
            <td>

                {% if block(c.name) is defined %}
                    {% with {row: row, column: c} %}
                        {{ block(c.name) }}
                    {% endwith %}
                {% else %}
                    {% if c.route %}
                        <a href="{{ path(c.route, row.rp) }}">
                            {{ attribute(row, c.name)|default() }}
                        </a>
                        {% else %}

                    {{ attribute(row, c.name)|default() }}
                        {% endif %}
                {% endif %}
                {#                    {% set _block = block(c)|default(false) %} #}
                {#                    {% if _block is not empty %} #}
                {#                        {{ _block|raw }} #}
                {#                    {% else %} #}
                {#                        {{ attribute(row, c) }} #}
                {#                    {% endif %} #}

                {% endfor %}
            </td>
        </tr>
    {% endfor %}
    </tbody>

</table>
</div>
