{% extends "base.html.twig" %}

{% block body %}

    {% for path, routes in json.paths %}
        <li>
            {{ path }}
            <div>
                {% for method, info in routes %}
                    <code>{{ method|upper }}</code> {{ path }}

                    <b>{{ info.summary }}</b>
                    {{ info.description }}
                    <div>
                        {{ dump(info) }}
                    </div>
                {% endfor %}
            </div>
        </li>
    {% endfor %}
{% endblock %}
