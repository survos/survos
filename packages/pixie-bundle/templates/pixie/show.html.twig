        {% if row._raw|default(false) %}
            <h3>._raw</h3>
            <twig:simple_item_grid
                    :data="row._raw|json_decode(true)"
            />
        {% endif %}
        {% if row.value|default(false) %}
            <h3>.value</h3>
            <twig:simple_item_grid
                    :data="row.value|json_decode(true)"
            />
        {% endif %}
    {% endif %}



