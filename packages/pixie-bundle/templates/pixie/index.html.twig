{% extends '@SurvosPixie/pixie/layout.html.twig' %}

{% block title %}Pixies{% endblock %}

{% block body %}

    {#    <p class="mb-1 text-muted">{{ _self }}</p> #}
<h3 class="mb-3">{{ 'Pixies' }}</h3>


        <form
                hx-get="{{ path('pixie_config_search') }}"
                hx-target="#search-results"
                hx-trigger="search, submit, load, input changed delay:400ms from:find input[type='search'], input delay:100ms from:find input[type='checkbox']">
            <div class="row align-items-center mb-4">
                <div class="col-lg-8">
                    <h5 class="mb-0">
                        Search Pixies
                        <span class="htmx-indicator">
                    {#    <img src="/img/bars.svg"/> Searching...#}
                    </span>
                    </h5>
                </div>
                <div class="col-lg-1">
                    <div class="form-check align-items-center justify-content-end d-flex gap-2">
                        <input id="showCounts" class="form-check-input" name="active_only" type="checkbox"/>
                        <label for="showCounts" class="form-check-label text-muted">Show Counts</label>
                    </div>
                </div>
                <div class="col-lg-3">
                    <input class="form-control py-2 px-3" type="search" name="q" placeholder="Begin Typing To Search Users..."/>
                </div>
            </div>
        </form>


<div id="search-results">

</div>


<div>

    {% endblock %}
