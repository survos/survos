{% block INDEX %}
    <div class="my-4">
        <h4 class="fw-medium mb-3">{{ 'relations'|trans }}</h4>
        <ul class="list-group list-group-flush bg-light rounded-3 py-2 px-3">

            {% for var in keys %}
                {% set value = attribute(data,var)|default(false) %}
                {% if value %}
                    {#                <h6 class="px-3 fw-medium pt-3 text-capitalize">{{ var }}</h6> #}
                    {% set icon = iconMap[var]|default(false) %}
                    <li class="list-group-item bg-light pt-0" title="{{ var|trans }}">
                        <div class="fields-text">
                        <span class="align-middle me-2">
                            {% if icon %}
                                {{ ux_icon(icon, {width:"20px", title: var}) }}
                            {% endif %}
                        </span>
                            {% if value is iterable %}
                                {% for v in value %}
                                    <li>{{ v }}</li>
                                {% endfor %}
                            {% else %}
                                <span>{{ value }}</span>
                            {% endif %}
                            {% if not icon %}
                                <code>{{ var }}</code>
                            {% endif %}

                        </div>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
{% endblock %}

