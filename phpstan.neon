parameters:
    
    # Global settings
    reportUnmatchedIgnoredErrors: false
    treatPhpDocTypesAsCertain: false
    
    # Additional global ignore patterns
    ignoreErrors:
        # Global patterns that apply across all bundles
        - '#Path in include\(\) .+ is not a file or it does not exist#'
        - '#Path in require.* .+ is not a file or it does not exist#'
