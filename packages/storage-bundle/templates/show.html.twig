{% extends "base.html.twig" %}

{% block body %}

    <div>
        {% set path = file.name %}
        {% for filter in ['small','medium','large'] %}

            <figure>
                {% set thumbUrl = path | imagine_filter(filter) %}
                <a href="{{ thumbUrl }}" target="_blank">
                    @todo: {{ thumbUrl }}
                    <img src="{{ thumbUrl }}" alt="{{ thumbUrl }}" style="width:50%">
                </a>
                <figcaption>{{ filter }}</figcaption>
            </figure>
        {% endfor %}
    </div>
{% endblock %}
